<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/listview_item_pressed"
          android:state_pressed="true"/> <!-- pressed -->
    <item android:drawable="@drawable/listview_item_selected_hovered"
          android:state_selected="true"
          android:state_activated="true" />
    <item android:drawable="@drawable/listview_item_hovered"
        android:state_selected="true" />
    <item android:drawable="@drawable/listview_item_selected"
          android:state_activated="true"/> <!-- focused -->
    <item android:drawable="@color/transparent"/> <!-- default -->
</selector>