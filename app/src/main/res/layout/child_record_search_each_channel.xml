<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:id="@+id/total_layout_child_record_each_channel"
    android:focusable="true"
    android:clickable="true"
    >
    <RelativeLayout
        android:id="@+id/relative_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8px"
        android:duplicateParentState="true"
        android:background="@drawable/custom_bg1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="355px"
        android:layout_height="300px"
        android:scaleType="fitXY"
        android:src="@drawable/channel_placeholder"
        android:id="@+id/image_record_search_each_channel"
        android:focusable="false"
        android:adjustViewBounds="true"
        app:riv_border_width="1dp"
        app:riv_corner_radius="10dip"
        app:riv_mutate_background="true"
        />

    <LinearLayout
        android:layout_width="355px"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/item_textview_background"
        android:layout_gravity="bottom|center"
        android:layout_alignBottom="@+id/image_record_search_each_channel">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/date_day_record_search_each_channel"
            android:text="time"
            android:textSize="15sp"
            android:padding="2dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingRight="1dp"
            android:paddingLeft="3dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FFF"
                    android:gravity="right"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:id="@+id/time_epgname_record_search_each_channel"
                    android:text="name"
                    android:layoutDirection="rtl"
                    android:textSize="15sp"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    />
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:gravity="left"
                android:singleLine="true"
                android:id="@+id/time_epgtime"
                android:text="- 00:00"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="visible"
                android:padding="2dp"/>
        </LinearLayout>
    </LinearLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:background="@drawable/button_focused_livechannel"
            android:id="@+id/play_button_child_new_search_movies"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>