<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:id="@+id/totalview_popup_register_error"
android:background="@drawable/msg_background_shape"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:text="@string/register_error_msg_title"
        android:gravity="right"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/cross_red"
        android:layout_alignParentLeft="true"
        android:focusable="false"/>


</RelativeLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layoutDirection="rtl"
    android:textSize="18sp"
    android:textColor="@color/colorPrimary"
    android:text="שגיאה 890"
    android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="right"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layoutDirection="rtl"
                android:layout_marginRight="5dp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/colorPrimary"
                android:text="@string/register_error_msg"
                />
        </LinearLayout>
    </ScrollView>

<TextView
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:text="אישור"
    android:textSize="20sp"
    android:textColor="#FFF"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="@dimen/popup_padding"
    android:id="@+id/ok_popup_register_error"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/search_button_bg"
    android:focusable="true"/>
</LinearLayout>