<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:id="@+id/totalview_child_vod_movie_videoplay"
    android:layout_marginStart="10dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_vod_movie_videoplay"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:adjustViewBounds="true"
        app:riv_border_width="1dp"
        app:riv_corner_radius="10dip"
        app:riv_mutate_background="true"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/button_focused_livechannel"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/image_vod_movie_videoplay">

        <TextView
            android:id="@+id/name_vod_movie_videoplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:background="#95000000"
            android:text="Name"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_textview_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/year_vod_movie_videoplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Year"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:padding="2dp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingBar_vod_movie_videoplay"
                style="?attr/ratingBarStyleSmall"
                android:theme="@style/RatingBar"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:max="5"
                android:gravity="right|center_vertical"
                android:rating="5"
                android:scaleX="0.8"
                android:scaleY="0.8" />


        </LinearLayout>

    </LinearLayout>



</RelativeLayout>