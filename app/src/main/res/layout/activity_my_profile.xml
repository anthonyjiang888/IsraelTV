<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:id="@+id/scrollview2">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/banner"
            android:background="@drawable/bg"
            android:paddingLeft="0dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="הפרופיל שלי"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/text_name"
                android:layout_marginLeft="25dp"
                />

            <ImageView
                android:layout_width="200px"
                android:layout_height="200px"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/pro_short"
                android:layout_below="@+id/text_name"
                android:layout_marginLeft="25dp"

                />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/profile_details"
            android:layout_below="@+id/banner"
            android:focusable="false"

            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/bg_myprofile"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="right|center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="סטטוס מנוי"
                            android:textSize="18sp"
                            android:textColor="#22a0c0"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:id="@+id/status_myprofile"
                            android:paddingTop="5dp"
                            android:gravity="right"
                            android:textColor="#000"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="חבילה קיימת"
                            android:paddingTop="5dp"
                            android:textSize="18sp"
                            android:textColor="#22a0c0"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:id="@+id/exist_package_myprofile"
                            android:paddingTop="5dp"
                            android:gravity="right"
                            android:textColor="#000"
                            android:text="package_name"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="החבילה בתוקף עד"
                            android:textSize="18sp"
                            android:paddingTop="5dp"
                            android:textColor="#22a0c0"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:gravity="right"
                            android:id="@+id/expired_in_myprofile"
                            android:paddingTop="5dp"
                            android:textColor="#000"
                            android:text="expire"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="0dp"
                            android:layout_height="125px"
                            android:layout_weight="0.3"
                            android:src="@drawable/address" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="* שינוי פרטים אישיים או רכישת חבילה תתאפשר דרך האתר"
                        android:textSize="17sp"
                        android:paddingRight="5dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="#000"
                        android:singleLine="true"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="בכתובת: israel.tv"
                        android:textSize="17sp"
                        android:paddingRight="5dp"
                        android:paddingTop="0dp"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="#000"


                        />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/bg_myprofile"
                    >


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="right|center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="שם מלא"
                            android:textSize="18sp"
                            android:textColor="#22a0c0"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:paddingTop="5dp"
                            android:id="@+id/full_name_myprofile"
                            android:textColor="#000"
                            android:text="Your Name"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="0px"
                        android:layout_weight="0.3"
                        android:layout_height="125px"
                        android:src="@drawable/pro"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/bg_myprofile"
                    >


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="right|center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="אימייל"
                            android:textSize="18sp"
                            android:textColor="#22a0c0"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:id="@+id/email_myprofile"
                            android:paddingTop="5dp"
                            android:textColor="#000"
                            android:text="example@domain.com"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="125px"
                        android:src="@drawable/email"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/bg_myprofile"
                    android:layout_weight="1">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="right|center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="טלפון"
                            android:textSize="18sp"
                            android:textColor="#22a0c0"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:id="@+id/phone_myprofile"
                            android:paddingTop="5dp"
                            android:gravity="right"
                            android:textColor="#000"
                            android:text="+123456"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="125px"
                        android:src="@drawable/phn"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/profile_details"
            android:layout_marginTop="20dp"
            android:id="@+id/btn_layout"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sort_button_bg"
                    android:padding="10dp"
                    android:text="התנתק מהחשבון"
                    android:id="@+id/Log_out_btn"
                    android:singleLine="true"
                    android:textSize="17sp"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:gravity="center|right"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:focusable="true"
                    android:layout_marginLeft="25dp" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sort_button_bg"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:text="בדיקת מהירות"
                    android:id="@+id/speed_test_btn"
                    android:singleLine="true"
                    android:textSize="17sp"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:gravity="center|right"
                    android:layout_gravity="center"
                    android:focusable="true"
                    android:layout_marginLeft="20dp" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sort_button_bg"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:text="Update"
                    android:id="@+id/update_btn"
                    android:singleLine="true"
                    android:textSize="17sp"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:gravity="center|right"
                    android:layout_gravity="center"
                    android:focusable="true"
                    android:layout_marginLeft="20dp"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="version"
                android:textSize="15sp"
                android:padding="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000"
                android:layout_below="@+id/btn_layout"
                android:id="@+id/app_version"
                />
        </LinearLayout>


    </RelativeLayout>

</ScrollView>