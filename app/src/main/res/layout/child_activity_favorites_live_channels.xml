<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/total_layout_favorites_live_channles"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">
    <RelativeLayout
        android:id="@+id/relative_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8px"
        android:duplicateParentState="true"
        android:background="@drawable/custom_bg1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginLeft="11dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_child_favorites_live_channles"
            android:layout_width="230px"
            android:layout_height="230px"
            android:adjustViewBounds="true"
            android:focusable="false"
            android:scaleType="fitXY"
            android:src="@drawable/channel_placeholder"
            app:riv_border_width="1dp"
            app:riv_corner_radius="10dip"
            app:riv_mutate_background="true"
            />

        <LinearLayout
            android:id="@+id/text_channel_fav"
            android:layout_width="230px"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_child_favorites_live_channles"
            android:layout_gravity="bottom"
            android:background="@drawable/item_textview_background"
            android:orientation="vertical"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/show_time_fav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center"
                android:padding="2dp"
                android:text="09:00-10:20"
                android:textColor="#fff"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/show_name_fav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="false"
                android:freezesText="true"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingBottom="2dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Show Name"
                android:textColor="#fff"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="visible"
                android:layoutDirection="rtl"/>
        </LinearLayout>
    </RelativeLayout>
    <!--</FrameLayout>-->
    <LinearLayout
        android:id="@+id/linearlayout_close_favorites_livechannels"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right|top"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/cross_red"
            android:focusable="false"
            />

    </LinearLayout>

</FrameLayout>