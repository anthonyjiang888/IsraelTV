<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/totalview_popup_package_suspend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/popup_padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:padding="5dp"
            android:text="המנוי חסום"
            android:textColor="#FFF"
            android:textSize="@dimen/popup_oksize"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:focusable="false"
            android:src="@drawable/cross_red" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layoutDirection="rtl"
                android:padding="5dp"
                android:text="לפרטים נוספים צרו איתנו קשר באתר בכתובת: israel.tv"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/popup_textsize" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/ok_popup_suspend"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/popup_padding"
        android:layout_marginTop="30dp"
        android:background="@drawable/search_button_bg"
        android:focusable="true"
        android:gravity="center"
        android:padding="15dp"
        android:text="אישור"
        android:textColor="#FFF"
        android:textSize="@dimen/popup_oksize" />

</LinearLayout>