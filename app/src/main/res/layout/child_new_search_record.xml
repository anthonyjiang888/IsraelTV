<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/total_layout_child_new_search_recyclerview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:clickable="true"
    android:focusable="true"
    android:gravity="center" >

    <RelativeLayout
        android:id="@+id/relative_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8px"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:duplicateParentState="true"
        android:background="@drawable/custom_bg1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_child_new_search_record"
            android:layout_width="220px"
            android:layout_height="220px"
            android:adjustViewBounds="true"
            android:focusable="false"
            android:paddingStart="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/channel_placeholder"
            app:riv_border_width="1dp"
            app:riv_corner_radius="10dip"
            app:riv_mutate_background="true" />

        <LinearLayout
            android:id="@+id/text_channel"
            android:layout_width="220px"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_child_new_search_record"
            android:layout_gravity="bottom"
            android:layout_marginBottom="1dp"
            android:background="@drawable/item_textview_background"
            android:orientation="vertical"
            android:visibility="visible" >



            <TextView
                android:id="@+id/child_new_search_record_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="false"
                android:freezesText="true"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="size"
                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>