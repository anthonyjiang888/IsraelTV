<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:id="@+id/totalview_child_whatsnew_tvshow_videoplay"
    android:background="#FFF"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right">

        <TextView
            android:id="@+id/title_child_whatsnew_tvshow_videoplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="15dp"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            android:gravity="right"
            android:text="Title" />

        <TextView
            android:id="@+id/description_child_whatsnew_tvshow_videoplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="Description" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            android:layout_marginTop="15dp">


            <TextView
                android:id="@+id/duration_whatsnew_tvshow_videoplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:text="Duration" />


            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="#000" />

            <RatingBar
                android:id="@+id/ratingBar_whatsnew_tvshow_videoplay"
                style="?attr/ratingBarStyleSmall"
                android:theme="@style/RatingBar"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:max="5"
                android:gravity="right|center_vertical"
                android:rating="5"
                android:scaleX="0.8"
                android:scaleY="0.8" />

        </LinearLayout>



    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/thumbnail_image_whatsnew_tvshow_videoplay"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:src="@drawable/club1"
            android:adjustViewBounds="true"
            app:riv_border_width="1dp"
            app:riv_corner_radius="10dip"
            app:riv_mutate_background="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:background="#95000000"
            android:id="@+id/text_play_whatsnew_tvshow_videoplay"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:background="@drawable/button_focused_livechannel"
            android:id="@+id/play_button_whatsnew_tvshow_videoplay"/>


    </FrameLayout>




</LinearLayout>